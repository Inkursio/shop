<!--start-breadcrumbs-->
<div class="breadcrumbs">
  <div class="container">
    <div class="breadcrumbs-main">
      <ol class="breadcrumbs">
        <li><%= render_breadcrumbs %></li>
        <li>Поиск по запросу</li>
      </ol>
    </div>
  </div>
</div>
<!--end-breadcrumbs-->

<!--prdt-starts-->
<div class="prdt">
  <div class="container">
    <div class="prdt-top">
      <div class="col-md-9 prdt-left">
        <% if @products %>
          <div class="product-one">
            <% @products.each do |prod| %>
              <div class="col-md-4 product-left p-left">
                <div class="product-main simpleCart_shelfItem">
                  <a href="/product/<%=prod.id%>" class="mask">
                    <%= image_tag(prod.img, alt:"", class: "img-responsive zoom-img" ) %>
                  </a>
                  <div class="product-bottom">
                    <h3><%=prod.title%></h3>
                  
                    <h4>$ <%=prod.price%></h4>
                  </div>
                </div>
              </div>
            <%end%>
            <div class="clearfix"></div>
          </div>
        <%else%>
          <h3>Nothing to show</h3>
        <%end%>
      </div>



      <div class="col-md-3 prdt-right">
        <div class="w_sidebar">
          <section class="sky-form">
            <h4>Categories</h4>
            <div class="rowl scroll-pane">
              <div class="col col-4">
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Women Watches</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Kids Watches</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Men Watches</label>
              </div>
            </div>
          </section>

          <section class="sky-form">
            <h4>Brand</h4>
            <div class="row1 row2 scroll-pane">
              <div class="col col-4">
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Citizen</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Casio</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Royal London</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Seiko</label>
                <label class="checkbox"><input type="checkbox" name="checkbox"><i></i>Diesel</label>
              </div>
            </div>
          </section>

        </div>
      </div>

      <div class="clearfix"></div>

    </div>
  </div>
</div>
