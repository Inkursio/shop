<div class="col-md-3 product-left">
  <div class="product-main simpleCart_shelfItem">
    <%= link_to  product_path(product), class:"mask" do %>
      <%= image_tag(product.img, alt:"", class: "img-responsive zoom-img")%>
    <%end%>
    <div class="product-bottom">
      <h3><%= link_to product.title, product_path(product)%></h3>
      <h4>
        <%= link_to 'cart_items', class: 'add-to-cart-link', data:{id: product.id} do %>
          <i></i>
        <%end%>
        <span class="item_price">$<%=product.price%></span>
      </h4>
    </div>
  </div>
</div>
